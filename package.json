{
  "name": "media-mapper",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "preinstall": "npx only-allow pnpm",
    "dev:app": "dotenvx run -f .env.local -- next dev --turbopack",
    "dev:api": "dotenvx run -f .env.local -- tsx watch ./src/server.ts",
    "drizzle:generate": "dotenvx run -f .env.local -- pnpm drizzle-kit generate",
    "drizzle:migrate": "dotenvx run -f .env.local -- pnpm drizzle-kit migrate",
    "drizzle:push": "dotenvx run -f .env.local -- pnpm drizzle-kit push",
    "drizzle:studio": "dotenvx run -f .env.local -- pnpm drizzle-kit studio",
    "test": "dotenvx run -f .env.test -- vitest",
    "format": "prettier src/ --write"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^7.3.0",
    "@hono/node-server": "^1.14.1",
    "@hono/zod-openapi": "^0.19.6",
    "@radix-ui/react-slot": "^1.2.2",
    "@scalar/hono-api-reference": "^0.8.9",
    "@shadcn/ui": "^0.0.4",
    "@supabase/supabase-js": "^2.49.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.43.1",
    "drizzle-zod": "^0.7.1",
    "hono": "^4.7.9",
    "hono-pino": "^0.8.0",
    "lucide-react": "^0.508.0",
    "next": "15.3.2",
    "pg": "^8.16.0",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "postcss": "^8.5.3",
    "postgres": "^3.4.5",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwind-merge": "^3.2.0",
    "tw-animate-css": "^1.2.9",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@tailwindcss/postcss": "^4.1.6",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "^20.17.46",
    "@types/react": "^19.1.3",
    "@types/react-dom": "^19.1.3",
    "drizzle-kit": "^0.31.1",
    "eslint": "^9.26.0",
    "eslint-config-next": "15.3.2",
    "eslint-config-prettier": "^10.1.5",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4.1.6",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vitest": "^3.1.3"
  }
}